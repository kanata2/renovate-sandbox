{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "labels": [
    "service: {{ packageFileDir }}",
    "provider:{{#if (containsString packageFileDir 'aws')}}aws{{else}}{{#if (containsString packageFileDir 'gcp')}}gcp{{else}}unknown{{/if}}{{/if}}",
    "service:{{ replace 'services/' '' (replace 'services-iam/' '' replace( 'aws/' '' replace( 'gcp/' '' packageFileDir))) }}"
  ],
  "enabledManagers": ["regex", "terraform", "terraform-version"],
  "regexManagers": [
    {
      "fileMatch": ["\\.tf$"],
      "matchStrings": [
        "required_version\\s*=\\s*\"=\\s*(?<currentValue>.+?)\""
      ],
      "extractVersionTemplate": "v(?<version>.*)$",
      "depNameTemplate": "hashicorp/terraform",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "hashicorp"
    }
  ]
}
